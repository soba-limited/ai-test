block variables

-
  const assets = "./assets/"

doctype html
html(lang="jp")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    link(rel="stylesheet",href=assets + "css/style/ress.min.css")
    link(rel="stylesheet",href=assets + "css/style/common.min.css")
    block addcss
    script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.26.0/babel.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/6.26.0/polyfill.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.6/ScrollMagic.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.6/plugins/animation.gsap.min.js")
    script(src=assets + "js/jquery-3.6.0.min.js")
    script(src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js")
  body

    include common/_header.pug

    main(class=title)
      block content

    include common/_footer.pug

    script(src=assets + "js/mv-test.js")
    block scripts